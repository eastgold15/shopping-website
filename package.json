{
  "name": "@shopping/monorepo",
  "private": true,
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "start": "turbo run start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean ",
    "preclean": "rimraf node_modules dist bun.lock .turbo"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@pori15/config": "^0.0.5",
    "animejs": "^4.1.3",
    "elysia": "1.4.6"
  }
}