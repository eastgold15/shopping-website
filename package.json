{
  "name": "@shopping/monorepo",
  "private": true,
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "start": "turbo run start",
