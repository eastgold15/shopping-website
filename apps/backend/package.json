{
  "name": "@shopping/backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "exports": {
    "./types": {
      "types": "./src/types/index.ts",
      "import": "./src/types/index.ts"
    },
    "./server": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --outfile ./dist/elysia.js src/index.ts",
    "clean": "rimraf dist  index.exe",
    "type-check": "bun --bun tsc --noEmit",
    "lint": "biome check ",
    "lint:fix": "biome check --write",
    "db:generate": "drizzle-kit generate --config=container/dev/drizzle-dev.config.ts",
    "db:generate:prod": "drizzle-kit generate --config=container/prod/drizzle-prod.config.ts",
    "db:migrate": "drizzle-kit migrate --config=container/dev/drizzle-dev.config.ts",
    "db:migrate:prod": "drizzle-kit migrate --config=container/prod/drizzle-prod.config.ts",
    "db:push": "drizzle-kit push --config=container/dev/drizzle-dev.config.ts",
    "db:push:prod": "drizzle-kit push --config=container/prod/drizzle-prod.config.ts",
    "db:studio": "drizzle-kit studio --config=container/dev/drizzle-dev.config.ts",
    "db:studio:prod": "drizzle-kit studio --config=container/prod/drizzle-prod.config.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.882.0",
    "@aws-sdk/s3-request-presigner": "^3.882.0",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/html": "^1.3.1",
    "@elysiajs/openapi": "1.3.11",
    "@elysiajs/static": "^1.3.0",
    "@pori15/elysia-auth-drizzle": "^1.3.4",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "pg": "^8.16.3",
    "drizzle-orm": "^0.44.5",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.3.21"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@pori15/schema-typebox-generator": "^2.0.6",
    "@types/bun": "^1.2.21",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "@sinclair/typebox": "0.34.33"
  }
}