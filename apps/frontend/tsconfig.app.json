{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "@repo/typescript-config/vue.json"
  ],
  "compilerOptions": {
    /* 路径映射（必须与 vite.config.ts 中的 alias 匹配） */
    "baseUrl": ".",
    "paths": {
      "@frontend/*": [
        "./src/*"
      ],
      "@backend/*": [
        "../backend/src/*"
      ],
      "@backend/types": [
        "../backend/src/types/index.ts"
      ],
      "@backend/server": [
        "../backend/src/index.ts"
      ]
    },
    "allowImportingTsExtensions": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
  },
  "include": [
    "src/**/*.ts",
    "auto-imports.d.ts",
    "components.d.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx", // 如果使用 TSX
    "src/**/*.vue", // 【关键】包含 Vue 单文件组件
    "types/**/*.d.ts",
    "vite.config.ts" // 包含配置文件本身
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js" // 排除已编译的 JS 文件
  ]
}